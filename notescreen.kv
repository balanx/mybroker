#: include condscreen.kv

<NoteSubRow>:
    size_hint: (1, None)
    height: app.row_height

    Label:
        size_hint_x: None
        width: self.height
        text: '*'

    Button:
        text: str(root.cond)
        on_release: root.wisb.open_cond(root)


<NoteRow>:
    size_hint: (1, None)
    height: app.row_height

    Button:
        size_hint_x: None
        width: self.height
        text: '+'
        on_release: root.wisb.add_subcond(root)

    Button:
        text: str(root.cond)
        on_release: root.wisb.open_cond(root)


<NoteScreen>:

    BoxLayout:
        orientation: 'vertical'
        spacing: app.row_space

        BoxLayout:
            size_hint: (1, None)
            height: app.row_height

            Button:
                text: "<<"
                size_hint_x: None
                width: self.height
                on_release: root.wisb.close_note(); app.save_fd()

            Button:
                text: '~' if root.note[0] else '|'
                size_hint_x: None
                width: self.height
                on_release: root.note[0] = not root.note[0]; self.text = '~' if root.note[0] else '|'

            Label:
                text: 'Note'

            Button:
                text: "x"
                size_hint_x: None
                width: self.height
                on_release: root.wisb.del_note(); app.save_fd()

        BoxLayout:
            size_hint: (1, None)
            height: app.row_height

            Label:
                text: 'Code'
                size_hint_x: None
                width: self.height

            TextInput:
                #id: txi_code
                text: root.note[1]
                multiline: False
                #focus: True
                on_text: root.on_text_code(self.text)

            Button:
                text: "+"
                on_release: root.add_cond()

        ScrollView:
            size_hint: (1, 1)

            BoxLayout:
                id: layout
                orientation: 'vertical'
                spacing: app.row_space
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            size_hint: (1, None)
            height: app.row_height

            Button:
                text: 'Log'
                size_hint_x: None
                width: self.height

            Label:
                #text: 'Short Medium Long Term, Trends or Vibration'
                text_size: self.size
                #valign: 'bottom'
                text: str(root.text[0])


#

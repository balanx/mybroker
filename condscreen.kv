#: import Factory kivy.factory.Factory
#: include common.kv
#: include typeprice.kv
#: include typetime.kv


<MyTypeDropDown@TypeDropDown>:
    Button:
        text: 'Time'
        size_hint_y: None
        height: app.row_height
        on_release: root.select('Time')

    Button:
        text: 'Price'
        size_hint_y: None
        height: app.row_height
        on_release: root.select('Price')


<CondScreen>:

    BoxLayout:
        orientation: 'vertical'
        spacing: app.row_space
        id: layout

        BoxLayout:
            size_hint: (1, None)
            height: app.row_height

            Button:
                text: "<<"
                size_hint_x: None
                width: self.height
                on_release: root.close_cond()

            Button:
                id: btn_enable
                text: "|"
                on_release: root.toggle_enable(self)

            Label:
                text: 'Edit ...'

            Button:
                text: "+"
                on_release: root.add_cond()

            Button:
                text: "x"
                size_hint_x: None
                width: self.height
                on_release: root.del_cond()

        BoxLayout:
            size_hint: (1, None)
            height: app.row_height

            Label:
                text: "Type"

            Button:
                id: btn_type
                text: 'Select ...'
                on_release: Factory.MyTypeDropDown(root).open(self)




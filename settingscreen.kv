<SettingScreen>:

    BoxLayout:
        orientation: 'vertical'
        spacing: app.row_space

        BoxLayout:
            size_hint: (1, None)
            height: app.row_height

            Button:
                text: '<<'
                size_hint_x: None
                width: self.height
                on_release: root.listscr.close_setting(); app.save_fd()

            Button:
                text: '~' if app.fd[0][1] else '|'
                size_hint_x: None
                width: self.height
                on_release:
                    app.fd[0][1] = not app.fd[0][1]
                    self.text = '~' if app.fd[0][1] else '|'

            Label:
                text: 'Setting'

            Button:
                text: 'x'
                size_hint_x: None
                width: self.height
                on_release: root.listscr.close_setting()

        ScrollView:
            size_hint: (1, 1)

            BoxLayout:
                id: layout
                orientation: 'vertical'
                spacing: app.row_space
                size_hint_y: None
                height: self.minimum_height

                BoxLayout:
                    size_hint: (1, None)
                    height: app.row_height

                    Label:
                        text: 'Interval'
                        size_hint_x: None
                        width: self.height

                    TextInput:
                        text: str(root.text[0])
                        multiline: False
                        #focus: True
                        on_text: root.on_text_interval(self.text)

        Label:
            size_hint: (1, 0.5)
            text: 'MyBroker    2018.12.20\nhttps://github.com/balanx/mybroker'



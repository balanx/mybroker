#: import common common

<TypePrice>:
    orientation: 'vertical'
    spacing: app.row_space

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: root.sym[0]

        CheckBox:
            group: 'g1'
            active: root.text[0]==root.sym[0]
            on_active: root.on_checkbox_active(self, 0)

        Label:
            text: root.sym[1]

        CheckBox:
            group: 'g1'
            active: root.text[0]==root.sym[1]
            on_active: root.on_checkbox_active(self, 1)

        Label:
            text: root.sym[2]

        CheckBox:
            group: 'g1'
            active: root.text[0]==root.sym[2]
            on_active: root.on_checkbox_active(self, 2)

        Label:
            text: root.sym[3]

        CheckBox:
            group: 'g1'
            active: root.text[0]==root.sym[3]
            on_active: root.on_checkbox_active(self, 3)

        Label:
            text: root.sym[4]

        CheckBox:
            group: 'g1'
            active: root.text[0]==root.sym[4]
            on_active: root.on_checkbox_active(self, 4)

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: root.sym[5]

        CheckBox:
            group: 'g2'
            active: root.text[1]==root.sym[5]
            on_active: root.on_checkbox_active(self, 5)

        Label:
            text: root.sym[6]

        CheckBox:
            group: 'g2'
            active: root.text[1]==root.sym[6]
            on_active: root.on_checkbox_active(self, 6)

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'Value'

        TextInput:
            text: common.reso2(root.cond[4])
            on_text: root.on_text_val(self.text)

    Label:
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.text[2]


#

<TypePrice>:
    orientation: 'vertical'
    spacing: app.row_space

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'Abs'

        CheckBox:
            id: cb_abs
            group: 'g1'
            #active: True
            on_active: root.on_checkbox_active(self, 1)

        Label:
            text: 'Open'

        CheckBox:
            id: cb_open
            group: 'g1'
            on_active: root.on_checkbox_active(self, 2)

        Label:
            text: 'Close'

        CheckBox:
            id: cb_close
            group: 'g1'
            on_active: root.on_checkbox_active(self, 3)

        Label:
            text: 'Max'

        CheckBox:
            id: cb_max
            group: 'g1'
            on_active: root.on_checkbox_active(self, 4)

        Label:
            text: 'Min'

        CheckBox:
            id: cb_min
            group: 'g1'
            on_active: root.on_checkbox_active(self, 5)

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            id: lb_more
            text: '>'

        CheckBox:
            id: cb_more
            group: 'g2'
            on_active: root.on_checkbox_active(self, 10)

        Label:
            id: lb_less
            text: '<'

        CheckBox:
            id: cb_less
            group: 'g2'
            #active: True
            on_active: root.on_checkbox_active(self, 11)

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'Value'

        TextInput:
            text: str(root.cond[4])
            on_text: root.on_text_val(self.text)

    Label:
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.text[0]


#

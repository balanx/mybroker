<TypeTime>:
    orientation: 'vertical'
    spacing: app.row_space

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Button:
            size_hint_x: None
            width: self.height * 2
            text: 'Start'

        Label:
            text: root.text[0]

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            size_hint_x: None
            width: self.height * 2
            text: 'How soon'

        TextInput:
            text: str(root.cond[3])
            on_text: root.on_text_time(self.text)

        Label:
            size_hint_x: None
            width: self.height
            text: 'days'

    Label:
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.text[1]



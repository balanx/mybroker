

<TypeTime>:
    orientation: 'vertical'
    spacing: app.row_space

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'Start'

        TextInput:
            text: 'today'

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'How long'

        TextInput:
            text: '1'

    Label:
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        id: lb_comment
        text: 'Time'



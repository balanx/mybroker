

<TypeTime>:
    orientation: 'vertical'
    spacing: app.row_space

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'Start'

        TextInput:
            id: txi_start
            text: 'today'

    BoxLayout:
        size_hint: (1, None)
        height: app.row_height

        Label:
            text: 'How soon'

        TextInput:
            id: txi_limit
            text: '0'
            on_text: root.on_text_time(self.text)

    Label:
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        id: lb_comment
        text: 'Time'



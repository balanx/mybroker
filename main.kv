#:kivy 1.10.0


<NoteScreen>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: (1, 0.1)

            Button:
                text: "<<"
                size_hint_x: None
                width: self.height
                on_release: app.listv.edit_note(textinp.text)

            TextInput:
                id: textinp
                text: 'None' if not app.listv.data else app.listv.data[app.listv.index]['title']
                #text: root.note['title']
                #text: root.text1
                multiline: False
                focus: True
                #on_text: app.listv.edit_note(self.text)

            Button:
                text: "x"
                size_hint_x: None
                width: self.height
                #text: str(app.listv.index)
                on_release: app.listv.del_note()

        ScrollView:
            id: view
            size_hint: (1, 1)


<ListRow>:

    Button:
        text: root.note['title']
        size_hint_x: None
        width: self.height * 1.5
        on_release: app.listv.HoldButtonNum(root)

    Label:
        text: "kv"


<ListScreen>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            #size: (64, 64)
            size_hint: (1, 0.1)

            Button:
                text: "$"
                size_hint_x: None
                width: self.height

            Label:
                text: "My Broker"
                #color: (1, 1, 1, 1)
                #background_color: (.3, .3, .3, 1)

            Button:
                text: "+"
                size_hint_x: None
                width: self.height
                on_release: root.add_note()

        ScrollView:
            id: view
            size_hint: (1, 1)


#

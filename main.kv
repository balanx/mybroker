#:kivy 1.10.0

ScreenManager:
    ListScreen:
        id: listv
        name: 'list_screen'
    NoteScreen:
        id: notev
        name: 'note_screen'


<NoteScreen>:

    Button:
        text: str(root.manager.ids.listv.index)
        on_release: root.manager.ids.listv.del_note()



<ListScreen>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            #size: (64, 64)
            size_hint: (1, 0.1)

            Button:
                text: "Menu"
                color: (1, 1, 1, 1)
                background_color: (.3, .3, .3, 1)

            Button:
                text: "+"
                size_hint_x: None
                width: self.height * 2
                on_release: root.add_note()

        ScrollView:
            id: view
            size_hint: (1, 1)


#

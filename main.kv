#:kivy 1.10.0

ScreenManager:
    Notes:
        id: notes_screen
        name: 'notes'
    NoteView:
        id: noteview_screen
        name: 'noteview'


<NoteView>:
    #current_index: current_index

    Button:
        #text: '<'
        #text: str(root.current_index)
        text: str(root.manager.ids.notes_screen.current_index)
        on_release: root.manager.current = 'notes'



<Notes>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size: (64, 64)
            size_hint: (1, None)

            Button:
                text: "Menu"
                color: (1, 1, 1, 1)
                background_color: (.3, .3, .3, 1)

            Button:
                text: "+"
                size_hint_x: None
                width: self.height * 2
                on_release: root.add_note()

        ScrollView:
            id: view


#

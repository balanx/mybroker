#:kivy 1.10.0

ScreenManager:
    ListScreen:
        id: listv
        name: 'list_screen'
    NoteScreen:
        id: notev
        name: 'note_screen'


<NoteScreen>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: (1, 0.1)

            Button:
                text: "<<"
                size_hint_x: None
                width: self.height
                on_release: root.manager.current = 'list_screen'

            TextInput:
                text: root.manager.ids.listv.data[int(root.manager.ids.listv.index / 2)]['title'] if root.manager.ids.listv.data else 'None'
                multiline: False
                focus: True
                on_text: root.manager.ids.listv.edit_note(self.text)

            Button:
                text: "x"
                size_hint_x: None
                width: self.height
                #text: str(root.manager.ids.listv.index)
                on_release: root.manager.ids.listv.del_note()

        ScrollView:
            id: view
            size_hint: (1, 1)



<ListScreen>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            #size: (64, 64)
            size_hint: (1, 0.1)

            Button:
                text: "$"
                size_hint_x: None
                width: self.height

            Label:
                text: "My Broker"
                #color: (1, 1, 1, 1)
                #background_color: (.3, .3, .3, 1)

            Button:
                text: "+"
                size_hint_x: None
                width: self.height
                on_release: root.add_note()

        ScrollView:
            id: view
            size_hint: (1, 1)


#
